{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "semi": [2, "never"],
    "react/jsx-filename-extension": [0],
    "jsx-a11y/anchor-is-valid": [0],
    "react/jsx-no-target-blank": 0,
    "react/require-default-props": [0],
    "import/no-dynamic-require": [0],
    "global-require": [0],
    "linebreak-style":[0]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "globals": {
    "document": true,
    "window": true
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  }
}